# Domain + HTTPS
ORTHANC_HOST=orthanc.example.com
LETSENCRYPT_EMAIL=you@example.com
TRAEFIK_DASHBOARD_HOST=traefik.example.com
# user:hashedpass pairs (use `htpasswd -nb user pass`)
TRAEFIK_DASHBOARD_USERS=admin:$$apr1$$3K... (replace)

# Orthanc/DB
ORTHANC_NAME=Prod Orthanc
ORTHANC_AET=ORTHANC
POSTGRES_DB=orthanc
POSTGRES_USER=orthanc
POSTGRES_PASSWORD=change_me

# Backup schedules (CRON)
PG_BACKUP_CRON=0 2 * * *
PG_BACKUP_KEEP_DAYS=7
PG_BACKUP_KEEP_WEEKS=4
PG_BACKUP_KEEP_MONTHS=6

# Restic storage (S3, MinIO, SFTP, or local path)
# Examples:
# RESTIC_REPOSITORY=s3:https://s3.amazonaws.com/your-bucket/orthanc-storage
# RESTIC_REPOSITORY=s3:https://minio.local:9000/orthanc-storage
# RESTIC_REPOSITORY=/backups/restic-repo   # bind mount repo directory
RESTIC_REPOSITORY=
RESTIC_PASSWORD=change_me
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
RESTIC_CRON=0 3 * * *
RESTIC_KEEP_DAILY=7
RESTIC_KEEP_WEEKLY=4
RESTIC_KEEP_MONTHLY=6
